<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorOnPrimary">@color/colorOnPrimary</item>
        <item name="colorSecondary">@color/colorSecondary</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="colorSurface">@color/white</item>
        <item name="android:fontFamily">@font/proxima_nova_regular</item>
        <item name="android:windowBackground">@color/gray_250</item>
    </style>

    <style name="TextAppearance.AppTitle" parent="TextAppearance.MaterialComponents.Caption">
        <item name="fontFamily">@font/proxima_nova_semibold</item>
        <item name="android:fontFamily">@font/proxima_nova_semibold</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">24sp</item>
        <item name="android:textColor">@color/red</item>
    </style>

    <style name="TextAppearance.NavProfileName" parent="TextAppearance.MaterialComponents.Caption">
        <item name="fontFamily">@font/proxima_nova_semibold</item>
        <item name="android:fontFamily">@font/proxima_nova_semibold</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/black_semi_transparent</item>
    </style>

    <style name="TextAppearance.NavProfileRole" parent="TextAppearance.MaterialComponents.Caption">
        <item name="fontFamily">@font/proxima_nova_medium</item>
        <item name="android:fontFamily">@font/proxima_nova_medium</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/black_semi_transparent</item>
    </style>

    <style name="TextAppearance.OrderPageTitle" parent="TextAppearance.MaterialComponents.Body1">
        <item name="fontFamily">@font/proxima_nova_bold</item>
        <item name="android:fontFamily">@font/proxima_nova_bold</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textSize">24sp</item>
        <item name="android:textColor">@color/black_semi_transparent</item>
    </style>

    <style name="TextAppearance.ServiceCentersTitle" parent="TextAppearance.MaterialComponents.Body1">
        <item name="fontFamily">@font/proxima_nova_bold</item>
        <item name="android:fontFamily">@font/proxima_nova_bold</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textSize">24sp</item>
        <item name="android:textColor">@color/black_semi_transparent</item>
    </style>

    <style name="TextAppearance.SearchEtStyle" parent="TextAppearance.MaterialComponents.Caption">
        <item name="android:fontFamily">@font/proxima_nova_regular</item>
        <item name="fontFamily">@font/proxima_nova_regular</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:maxLines">1</item>
        <item name="android:textColor">@color/black</item>
    </style>


    <style name="Widget.SearchFilters" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="fontFamily">@font/proxima_nova_medium</item>
        <item name="android:fontFamily">@font/proxima_nova_medium</item>
        <item name="android:textSize">18sp</item>
        <item name="android:padding">0dp</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:minHeight">0dp</item>
        <item name="android:minWidth">0dp</item>
        <item name="backgroundTint">@color/gray_800</item>
        <item name="rippleColor">@color/gray_300</item>

    </style>

    <style name="TextAppearance.OrderIdTitle" parent="TextAppearance.MaterialComponents.Caption">
        <item name="fontFamily">@font/proxima_nova_medium</item>
        <item name="android:fontFamily">@font/proxima_nova_medium</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="TextAppearance.ServiceBookedOnDateLabel" parent="TextAppearance.MaterialComponents.Caption">
        <item name="android:fontFamily">@font/proxima_nova_regular</item>
        <item name="fontFamily">@font/proxima_nova_regular</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/gray_800</item>
    </style>

    <style name="TextAppearance.ServiceBookedOnDateTv" parent="TextAppearance.MaterialComponents.Caption">
        <item name="android:fontFamily">@font/proxima_nova_semibold</item>
        <item name="fontFamily">@font/proxima_nova_semibold</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="TextAppearance.ServiceCenterNameInAccountStyle" parent="TextAppearance.MaterialComponents.Caption">
        <item name="android:fontFamily">@font/proxima_nova_semibold</item>
        <item name="fontFamily">@font/proxima_nova_semibold</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textAllCaps">true</item>
    </style>

    <style name="TextAppearance.ServiceCenterAddressInAccountStyle" parent="TextAppearance.MaterialComponents.Hint">
        <item name="android:fontFamily">@font/proxima_nova_regular</item>
        <item name="fontFamily">@font/proxima_nova_regular</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/gray_800</item>
    </style>

    <style name="TextAppearance.VehicleInfoInOrder" parent="TextAppearance.MaterialComponents.Caption">
        <item name="android:fontFamily">@font/proxima_nova_semibold</item>
        <item name="fontFamily">@font/proxima_nova_semibold</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/black</item>
    </style>


    <style name="TextAppearance.RepresentativeName" parent="TextAppearance.MaterialComponents.Caption">
        <item name="android:fontFamily">@font/proxima_nova_regular</item>
        <item name="fontFamily">@font/proxima_nova_regular</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="Widget.OrderStatus" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="fontFamily">@font/proxima_nova_medium</item>
        <item name="android:fontFamily">@font/proxima_nova_medium</item>
        <item name="android:textSize">18sp</item>
        <item name="android:padding">6dp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:minHeight">0dp</item>
        <item name="android:minWidth">0dp</item>
        <item name="android:textAllCaps">false</item>
        <item name="backgroundTint">@color/red</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
    </style>

    <style name="Widget.AddServiceCenters" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="fontFamily">@font/proxima_nova_medium</item>
        <item name="android:fontFamily">@font/proxima_nova_medium</item>
        <item name="android:textSize">18sp</item>
        <item name="android:padding">10dp</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:minHeight">0dp</item>
        <item name="android:minWidth">0dp</item>
        <item name="backgroundTint">@color/gray_800</item>
        <item name="rippleColor">@color/gray_300</item>

    </style>

    <style name="TextAppearance.ServiceCenterHeaderItem" parent="TextAppearance.MaterialComponents.Body1">
        <item name="fontFamily">@font/proxima_nova_bold</item>
        <item name="android:fontFamily">@font/proxima_nova_bold</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="TextAppearance.ServiceCenterItem" parent="TextAppearance.MaterialComponents.Body1">
        <item name="fontFamily">@font/proxima_nova_regular</item>
        <item name="android:fontFamily">@font/proxima_nova_regular</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/black_semi_transparent_200</item>
    </style>


</resources>
