<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="16dp">

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/nameTv"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight=".28"
        android:text="Varun Motors HSR layout3rwerwrwersdfsdf"
        android:maxLines="1"
        android:ellipsize="end"
        style="@style/TextAppearance.ServiceCenterItem" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/carsInServiceTv"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight=".18"
        android:text="10"
        android:gravity="center"
        style="@style/TextAppearance.ServiceCenterItem" />


    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/carsDeliveredTv"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight=".18"
        android:text="2"
        android:gravity="center"
        style="@style/TextAppearance.ServiceCenterItem" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/servicesScheduledTv"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight=".18"
        android:text="10"
        android:gravity="center"
        style="@style/TextAppearance.ServiceCenterItem" />


    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/actionTv"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight=".18"
        android:text="12"
        android:gravity="center"
        style="@style/TextAppearance.ServiceCenterItem" />

</LinearLayout>